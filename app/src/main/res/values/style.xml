<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupMenuStyle.PopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyMenuDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#12677F</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/blue</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlHighlight">@color/yellow</item>
        <item name="android:textColorSecondary">@color/blue</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

</resources>