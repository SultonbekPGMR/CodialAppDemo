<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.group.AddStudentInGroup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#FFB800">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="#FFFFFF" />


        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Talaba qo'shish"
            android:textColor="#1A4E79"
            android:textSize="22sp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_surname"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Familyasi"
            app:endIconTint="@color/blue"
            app:hintTextColor="@color/blue"
            app:endIconMode="clear_text"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <EditText
                android:id="@+id/edt_surname"
                android:inputType="text"
                android:layout_width="match_parent"
                android:textColor="@color/blue"
                android:importantForAutofill="no"
                android:layout_height="?attr/actionBarSize" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_name"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Ismi"
            app:endIconTint="@color/blue"
                    app:hintTextColor="@color/blue"
            app:endIconMode="clear_text">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:textColor="@color/blue"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_number"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Otasining Ismi"
            app:endIconTint="@color/blue"
                    app:hintTextColor="@color/blue"
            app:endIconMode="clear_text">

            <EditText
                android:id="@+id/edt_father_name"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:textColor="@color/blue"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_date"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Sana"
            app:endIconTint="@color/blue"
            app:hintTextColor="@color/blue"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/baseline_date_range_24">

            <EditText
                android:id="@+id/edt_date"
                android:layout_width="match_parent"
                android:textColor="@color/blue"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_height="?attr/actionBarSize"
                android:inputType="date" />
        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:id="@+id/coordinate_layout"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:text="Saqlash"
        android:textAllCaps="false"
        android:backgroundTint="@color/yellow"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:layout_gravity="end"/>


</LinearLayout>